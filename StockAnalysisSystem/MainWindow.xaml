<Window x:Class="StockAnalysisSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        mc:Ignorable="d"
        Title="股票分析系统" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- 卡片阴影效果（可选，若不支持可删除 Effect 属性） -->
        <DropShadowEffect x:Key="CardShadow"
                          BlurRadius="10"
                          ShadowDepth="2"
                          Opacity="0.15"
                          Color="#000000"/>

        <!-- 现代按钮样式 -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#1976D2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="8,4">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1565C0"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#0D47A1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 顶部工具栏 -->
        <Border Grid.Row="0" Background="#2196F3" Padding="15">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="股票代码:" 
                           Foreground="White" 
                           VerticalAlignment="Center" 
                           Margin="0,0,12,0" 
                           FontSize="14" 
                           FontWeight="Medium"/>

                <Border Background="White" 
                        CornerRadius="4" 
                        BorderBrush="#B3E5FC" 
                        BorderThickness="1"
                        Padding="8,4"
                        Margin="0,0,12,0"
                        Height="32"
                        VerticalAlignment="Center">
                    <TextBox x:Name="txtStockCode" 
                             Width="160" 
                             BorderThickness="0"
                             Background="Transparent"
                             FontSize="13"
                             VerticalAlignment="Center"
                             Padding="0"/>
                </Border>

                <Button x:Name="btnSearch" 
                        Content="查询" 
                        Width="76" 
                        Height="32" 
                        Click="BtnSearch_Click" 
                        Margin="0,0,10,0"
                        Style="{StaticResource ModernButtonStyle}"/>

                <Button x:Name="btnRefresh" 
                        Content="刷新" 
                        Width="76" 
                        Height="32" 
                        Click="BtnRefresh_Click" 
                        Margin="0,0,10,0"
                        Style="{StaticResource ModernButtonStyle}"/>

                <Button x:Name="btnAddToFavorites" 
                        Content="添加到收藏" 
                        Width="104" 
                        Height="32" 
                        Click="BtnAddToFavorites_Click" 
                        Margin="0,0,16,0"
                        Style="{StaticResource ModernButtonStyle}"/>
                <Border Background="White" 
                        CornerRadius="4" 
                        BorderBrush="#B3E5FC" 
                        BorderThickness="1"
                        Padding="0"
                        Height="32"
                        Margin="0,0,400,0"
                        VerticalAlignment="Center">
                    <ComboBox x:Name="cmbTimeRange" 
                              Width="120" 
                              SelectedIndex="0" 
                              BorderThickness="0"
                              Background="Transparent"
                              FontSize="13"
                              VerticalContentAlignment="Center">
                        <ComboBoxItem Content="1天"/>
                        <ComboBoxItem Content="1周"/>
                        <ComboBoxItem Content="1月"/>
                        <ComboBoxItem Content="3月"/>
                        <ComboBoxItem Content="1年"/>
                    </ComboBox>
                </Border>
                
                <Button x:Name="btnRegister" 
                        Content="登入" 
                        Width="76" 
                        Height="32"
                        Click="BtnRegister_Click"
                        Style="{StaticResource ModernButtonStyle}"/>
            </StackPanel>
        </Border>

        <!-- 主内容区 -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 左侧面板 - 股票列表和收藏 -->
            <Border Grid.Column="0" 
                    BorderBrush="#E0E0E0" 
                    BorderThickness="0,0,1,0"
                    Background="White">
                <Grid Margin="0,0,0,16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="#F5F5F5" Padding="12,8">
                        <TextBlock Text="收藏股票" 
                                   FontSize="14" 
                                   FontWeight="SemiBold" 
                                   Foreground="#333"/>
                    </Border>
                    <ListBox x:Name="lstFavorites" 
                             Grid.Row="1" 
                             SelectionChanged="LstFavorites_SelectionChanged"
                             BorderThickness="0"
                             Background="Transparent"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Padding" Value="12,6"/>
                                <Setter Property="Margin" Value="0,2"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <Border x:Name="border" 
                                                    Background="Transparent" 
                                                    CornerRadius="4"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter />
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#E3F2FD"/>
                                                </Trigger>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#BBDEFB"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding DisplayName}" 
                                           FontSize="13" 
                                           Foreground="#212121"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <Border Grid.Row="2" Background="#F5F5F5" Padding="12,8" Margin="0,16,0,0">
                        <TextBlock Text="最近查询" 
                                   FontSize="14" 
                                   FontWeight="SemiBold" 
                                   Foreground="#333"/>
                    </Border>
                    <ListBox x:Name="lstRecent" 
                             Grid.Row="3" 
                             SelectionChanged="LstRecent_SelectionChanged"
                             BorderThickness="0"
                             Background="Transparent"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Padding" Value="12,6"/>
                                <Setter Property="Margin" Value="0,2"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <Border x:Name="border" 
                                                    Background="Transparent" 
                                                    CornerRadius="4"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter />
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#E3F2FD"/>
                                                </Trigger>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#BBDEFB"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding DisplayName}" 
                                           FontSize="13" 
                                           Foreground="#212121"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>

            <!-- 右侧面板 - 股票信息和图表 -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- 股票基本信息卡片 -->
                <Border Grid.Row="0" 
                        Background="White" 
                        Padding="20" 
                        Margin="16,16,16,0"
                        CornerRadius="8"
                        BorderBrush="#E0E0E0" 
                        BorderThickness="1"
                        Effect="{StaticResource CardShadow}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="股票名称" FontSize="12" Foreground="#757575"/>
                            <TextBlock x:Name="txtStockName" FontSize="16" FontWeight="Bold" Margin="0,4,0,0"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="当前价格" FontSize="12" Foreground="#757575"/>
                            <TextBlock x:Name="txtCurrentPrice" FontSize="16" FontWeight="Bold" Foreground="#2196F3" Margin="0,4,0,0"/>
                        </StackPanel>
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="涨跌幅" FontSize="12" Foreground="#757575"/>
                            <TextBlock x:Name="txtChangePercent" FontSize="16" FontWeight="Bold" Margin="0,4,0,0"/>
                        </StackPanel>
                        <StackPanel Grid.Column="3">
                            <TextBlock Text="成交量" FontSize="12" Foreground="#757575"/>
                            <TextBlock x:Name="txtVolume" FontSize="16" FontWeight="Bold" Margin="0,4,0,0"/>
                        </StackPanel>
                        <StackPanel Grid.Column="4">
                            <TextBlock Text="最新开盘日期" FontSize="12" Foreground="#757575"/>
                            <TextBlock x:Name="txtNewDate" FontSize="16" FontWeight="Bold" Margin="0,4,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- 图表区域：用 Border 包裹 Chart 实现圆角 -->
                <Grid Grid.Row="1" Margin="16,16,16,16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" 
                               Text="价格走势图" 
                               FontSize="16" 
                               FontWeight="SemiBold" 
                               Margin="0,0,0,12"
                               Foreground="#212121"/>

                    <!-- 关键修复：用 Border 包裹 CartesianChart -->
                    <Border Grid.Row="1"
                            Background="White"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="10">
                        <lvc:CartesianChart x:Name="PriceChart"
                                            Background="Transparent"
                                            Zoom="X"
                                            Pan="X"
                                            DisableAnimations="True"
                                            Hoverable="False"
                                            DataTooltip="{x:Null}" 
                                            Loaded="PriceChart_Loaded"/>
                    </Border>
                   
              
                </Grid>
            </Grid>
        </Grid>

        <!-- 状态栏 -->
        <StatusBar Grid.Row="2" Background="#F5F5F5" Padding="12,4">
            <StatusBarItem>
                <TextBlock x:Name="txtStatus" 
                           Text="就绪" 
                           FontSize="12" 
                           Foreground="#616161"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>